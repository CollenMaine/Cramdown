@model MealModel
@{
    MealModel meal = ViewBag.Message;
    ViewBag.Title = meal.pTitle;
    ViewBag.Description = "A Cramdown post";
    ViewBag.Keywords = "Cramdown post,homemade food,buy homemade food";
}
<script>
    document.title = "A user's post";
</script>

@if(meal != null)
{
    <div style="display:inline; display: grid; place-items: center;">
        <a href="/User/UserInfo/@meal.uid">
            <img src="@meal.uDp" class="rounded-circle img-fluid" style="width:50px; height:50px;" alt="" asp-append-version="true" />
        </a>
        <a href="/User/UserInfo/@meal.uid">
            <span class="m-1">@meal.uName</span>
        </a>
        <br />
    </div>
    <div class="justify-content-center">
        <p><img class="rounded img-fluid" style="height:20rem;" src="@meal.pImage" asp-append-version="true" /></p>
    </div>
    <span class="m-1">@meal.pTitle</span>
    <br />
    <div style="display:inline;">
        <span class="m-1">R @meal.pPrice</span>
        &nbsp;&nbsp;&nbsp;
        <a class="btn m-1 btn-primary" style="width:fit-content;" asp-controller="Home" asp-action="AppDownload">Interested</a>
    </div>

}
else
{
    <h1>Oops! We couldn't find what you are looking for.</h1>
}
